<p id="notice"><%= notice %></p>

<h2>Trade requests</h2>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @trades.each do |trade| %>
    <div class='col-sm-12 well list-unstyled wowhead'>
        Realm:<%= trade.realm %>
        BattleNet ID:<%= trade.bnet_id %>
        Item:<%= trade.item %>
        Number of Items:<%= trade.number_of_items %>
        Price Per Item:<%= trade.price_per_item %>
        Number of stacks:<%= trade.number_of_stacks %>
        Price per stack:<%= trade.price_per_stack %>
        Willing to accept COD: <%= trade.cod %>
        <%= link_to 'Show', trade %>
        <%= link_to 'Edit', edit_trade_path(trade) %>
        <%= link_to 'Destroy', trade, method: :delete, data: { confirm: 'Are you sure?' } %>
      
    </div>
    <% end %>

  </tbody>
</table>

<br>

<%= link_to 'New Trade', new_trade_path %>
