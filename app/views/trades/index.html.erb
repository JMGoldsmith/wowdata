<p id="notice"><%= notice %></p>

<h1>Listing Trades</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @trades.each do |trade| %>
    <div class='col-sm-12 well list-unstyled wowhead'>
        <p><%= trade.realm %>
        <%= trade.bnet_id %>
        <%= trade.item %>
        <%= trade.number_of_items %>
        <%= trade.price_per_item %>
        <%= trade.number_of_stacks %>
        <%= trade.price_per_stack %>
        <%= trade.cod %></p>
        <%= link_to 'Show', trade %>
        <%= link_to 'Edit', edit_trade_path(trade) %>
        <%= link_to 'Destroy', trade, method: :delete, data: { confirm: 'Are you sure?' } %>
      
    </div>
    <% end %>

  </tbody>
</table>

<br>

<%= link_to 'New Trade', new_trade_path %>
