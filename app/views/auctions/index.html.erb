
<div class='row'>
	<div id="auction_chart" style="width: 560px; height: 300px;" class='col-lg-8 col-lg-offset-3'>

		<script type="text/javascript" charset="utf-8">
		  $(function () {
		    new Highcharts.Chart({
		      chart: { renderTo: 'auction_chart' },
    		  title: { text: 'Auction by item' },
    		  xAxis: { 
    		  	title: {text: 'Hourly'} 
    		  },
    		  yAxis: {
      			title: { text: 'Cost'}
    			},
    		  series: [{
      			pointInterval: <%= 1.day * 1000%>,
      			pointStart: <%= 9.days.ago.to_i  %>,
      			data: <%= (9.days.ago.to_date..Date.today).map { |date| AuctionData.cost_over_time(date).to_f}.inspect %>
    			}]
  				});
		    });
	</script>

	</div>
</div>